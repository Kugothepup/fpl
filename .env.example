# FPL Manager v3 - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
API_HOST=0.0.0.0
API_PORT=5000

# FPL Configuration
FPL_TEAM_ID=your_fpl_team_id_here

# External API Keys (Optional but recommended for full functionality)
OPENWEATHER_API_KEY=your_openweather_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key
MISTRAL_API_KEY=your_mistral_api_key

# Database Configuration
DATABASE_PATH=fpl_manager_v3.db
CACHE_DATABASE_PATH=fpl_cache_v3.db
PREDICTIONS_DATABASE_PATH=fpl_predictions_v3.db

# ML Model Configuration
ML_MODEL_PATH=models/
ENABLE_ENHANCED_ML=True

# Cache Configuration
CACHE_DURATION_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=fpl_manager_v3.log

# Feature Flags
ENABLE_NEWS_INTEGRATION=True
ENABLE_WEATHER_INTEGRATION=True
ENABLE_MANAGER_AI=True
ENABLE_ACCURACY_TRACKING=True

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60